<component-set>
	<components>
		<component>
			<role>org.apache.maven.lifecycle.mapping.LifecycleMapping</role>
			<role-hint>galasa-obr</role-hint>
			<implementation>
				org.apache.maven.lifecycle.mapping.DefaultLifecycleMapping
			</implementation>
			<configuration>
				<lifecycles>
					<lifecycle>
						<id>default</id>
						<phases>
							<process-resources>
								dev.galasa:galasa-maven-plugin:obrresources
							</process-resources>
							<install>
								org.apache.maven.plugins:maven-install-plugin:2.4:install
							</install>
							<deploy>
								org.apache.maven.plugins:maven-deploy-plugin:2.7:deploy
							</deploy>
						</phases>
					</lifecycle>
				</lifecycles>
			</configuration>
		</component>
		<component>
			<role>org.apache.maven.artifact.handler.ArtifactHandler</role>
			<role-hint>galasa-obr</role-hint>
			<implementation>
				org.apache.maven.artifact.handler.DefaultArtifactHandler
			</implementation>
			<configuration>
				<extension>obr</extension>
				<type>obr</type>
				<packaging>galasa-obr</packaging>
			</configuration>
		</component>
		
		<!--
			Create a Karaf Feature from the galasa-obrs		
		 -->
		<component>
			<role>org.apache.maven.lifecycle.mapping.LifecycleMapping</role>
			<role-hint>galasa-karaffeature</role-hint>
			<implementation>
				org.apache.maven.lifecycle.mapping.DefaultLifecycleMapping
			</implementation>
			<configuration>
				<lifecycles>
					<lifecycle>
						<id>default</id>
						<phases>
							<process-resources>
								dev.galasa:galasa-maven-plugin:karaffeature
							</process-resources>
							<install>
								org.apache.maven.plugins:maven-install-plugin:2.4:install
							</install>
							<deploy>
								org.apache.maven.plugins:maven-deploy-plugin:2.7:deploy
							</deploy>
						</phases>
					</lifecycle>
				</lifecycles>
			</configuration>
		</component>
		<component>
			<role>org.apache.maven.artifact.handler.ArtifactHandler</role>
			<role-hint>galasa-karaffeature</role-hint>
			<implementation>
				org.apache.maven.artifact.handler.DefaultArtifactHandler
			</implementation>
			<configuration>
				<extension>xml</extension>
				<type>xml</type>
				<packaging>galasa-karaffeature</packaging>
			</configuration>
		</component>
	</components>
</component-set>